<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.jobify" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Jobify</name>
    <description>
        Jobify
    </description>
    <author>
        rere20
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>I will use your GPS position to show on a map.</string>
    </edit-config>
    <preference name="SplashScreenDelay" value="1300" />
</widget>
